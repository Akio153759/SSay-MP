<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".CreacionPartida">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:onClick="Back"
            android:src="@android:drawable/ic_menu_revert" />
        <TextView
            android:layout_width="0dp"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:text="Creando sala"
            android:layout_height="match_parent"
            android:layout_weight="9"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_friend"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_search" />
            <EditText
                android:id="@+id/etSearchFriend"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:inputType="text"
                android:hint="Buscar amigo"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_friends_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2.7"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/lblAnfitrion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="26sp"
                android:layout_marginBottom="10dp"
                android:text="Partida de ElAko"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivAnfitrion"
                        android:layout_width="63dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:foreground="@drawable/circle_icon_white"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/tvAnfitrion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="UserNick"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer2"
                        android:layout_width="63dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:foreground="@drawable/circle_icon_white"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/tvPlayer2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="VS"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer3"
                        android:layout_width="63dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:foreground="@drawable/circle_icon_white"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/tvPlayer3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer4"
                        android:layout_width="63dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:foreground="@drawable/circle_icon_white"
                        app:srcCompat="@mipmap/ic_launcher" />
                    <TextView
                        android:id="@+id/tvPlayer4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="2.3"
            android:onClick="ConfirmarPartida"
            android:text="Crear partida" />


    </LinearLayout>

</LinearLayout>