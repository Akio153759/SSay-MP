<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    android:orientation="vertical"
    tools:context=".CreacionPartida">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#80212121"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="Back"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_back" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:textColor="#fff"
                android:text="Creando partida"
                android:fontFamily="@font/amaranth_bold_italic"
                android:paddingLeft="30dp"
                android:textSize="24sp"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_friend_pcolor"
            android:layout_height="0dp"
            android:elevation="2dp"
            android:layout_weight="1.5"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:tint="@android:color/white"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_find" />
            <EditText
                android:id="@+id/etSearchFriend"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:inputType="text"
                android:hint="Buscar amigo"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_friends_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2.7"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="30dp"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/lblAnfitrion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:fontFamily="@font/amaranth_bold_italic"
                android:textSize="28sp"
                android:background="@drawable/bg_search_friend_pcolor"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:text="Partida de ElAko"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivAnfitrion"
                        android:layout_width="63dp"
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/red_birra"/>
                    <TextView
                        android:id="@+id/tvAnfitrion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="UserNick"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer2"
                        android:layout_width="63dp"
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/red_birra"/>
                    <TextView
                        android:id="@+id/tvPlayer2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="VS"
                android:textSize="26sp"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/red_birra"
                android:gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer3"
                        android:layout_width="63dp"
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/red_birra"/>
                    <TextView
                        android:id="@+id/tvPlayer3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer4"
                        android:layout_width="63dp"
                        android:elevation="4dp"
                        android:layout_gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/red_birra"/>
                    <TextView
                        android:id="@+id/tvPlayer4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="Vacio"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="2.3"
            android:onClick="ConfirmarPartida"
            android:fontFamily="@font/amaranth_bold_italic"
            android:elevation="4dp"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="@drawable/eff_btn_primary_dark"
            android:text="Crear partida" />


    </LinearLayout>

</LinearLayout>