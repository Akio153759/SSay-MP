<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".SpeedActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/fondounido"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="45dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:elevation="5dp"
                android:background="@drawable/speed_target"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_gravity="start"
                    android:layout_height="100dp"

                    app:srcCompat="@mipmap/ic_launcher" />
            </FrameLayout>

            <Button
                android:id="@+id/btnStop"
                android:text="Frenar"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:background="@drawable/eff_btn_primary_dark"
                android:elevation="4dp"
                android:fontFamily="@font/baloo_thambi"
                android:layout_width="100dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#070707"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#cb393c"/>
                    <TextView
                        android:id="@+id/lblPlayer1"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP1"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#cb393c"/>
                    <TextView
                        android:id="@+id/lblPlayer2"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:singleLine="true"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP2"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#cb393c"/>
                    <TextView
                        android:id="@+id/lblPlayer3"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP3"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPlayer4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#cb393c"/>
                    <TextView
                        android:id="@+id/lblPlayer4"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP4"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="45dp"
        android:tint="#FF070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/siluetauser" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="45dp"

            android:layout_marginTop="380dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="Puntaje: "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/myScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/vida1"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_sad_emoji"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/vida2"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_neutral_emoji"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/vida3"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_smile_emoji"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>