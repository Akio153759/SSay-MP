<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/fondounido"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="45dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnBottom"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_gravity="bottom"

                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_manaos"
                    android:onClick="pressBtnBottom" />

                <Button
                    android:id="@+id/btnTop"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight=".8"
                    android:background="@drawable/btn_fernet"
                    android:onClick="pressBtnTop" />

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".65"
                    android:background="@drawable/btn_cerveza"
                    android:onClick="pressBtnLeft" />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="-20dp"
                    android:layout_weight=".6"
                    android:background="@drawable/btn_vino"
                    android:onClick="pressBtnRight" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#070707"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer1"
                        android:layout_width="0dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:foreground="@drawable/circle_icon_black"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/lblPlayer1"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/P1VidaN1"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_sad_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P1VidaN2"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_neutral_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P1VidaN3"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_smile_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP1"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer2"
                        android:layout_width="0dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:foreground="@drawable/circle_icon_black"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/lblPlayer2"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:singleLine="true"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/P2VidaN1"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_sad_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P2VidaN2"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_neutral_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P2VidaN3"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_smile_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP2"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer3"
                        android:layout_width="0dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:foreground="@drawable/circle_icon_black"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/lblPlayer3"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/P3VidaN1"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_sad_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P3VidaN2"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_neutral_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P3VidaN3"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_smile_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP3"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPlayer4"
                        android:layout_width="0dp"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:foreground="@drawable/circle_icon_black"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/lblPlayer4"
                        android:layout_width="0dp"
                        android:text="ElAko"
                        android:fontFamily="@font/amaranth_bold_italic"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/P4VidaN1"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_sad_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P4VidaN2"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_neutral_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/P4VidaN3"
                            android:layout_width="0dp"
                            app:srcCompat="@drawable/ic_smile_emoji"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStarP4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_star"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/scoreP4"
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:textColor="#FFFFFF"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"

        android:layout_height="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="45dp"
        android:tint="#FF070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/siluetauser" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="45dp"

        android:layout_marginTop="380dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="Puntaje: "
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/myScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>