<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_enabled="true" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/holo_green_light"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px" android:topRightRadius="0px" android:topLeftRadius="0px"/>



        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/background_light"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px" android:topRightRadius="0px" android:topLeftRadius="0px"/>



        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/holo_blue_light"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px" android:topRightRadius="0px" android:topLeftRadius="0px"/>



        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@android:color/holo_orange_light"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px" android:topRightRadius="0px" android:topLeftRadius="0px"/>



        </shape>
    </item>
</selector>
